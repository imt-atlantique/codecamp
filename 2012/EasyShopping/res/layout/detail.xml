<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    	android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" 
    android:weightSum="1.0">
    <TextView 
        android:id="@+id/detail_textnomproduit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produit"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/detail_imageproduit"
        android:layout_height="345dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">
        <TextView
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:text="Max:" 
        	android:textColor="#000000"
        	android:textSize="20dp"/>
        <TextView
            android:id="@+id/detail_textmaxproduit"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:textColor="#000000"
        	android:layout_weight="1"
        	android:textSize="20dp"
       		android:gravity="center_vertical|center_horizontal"/>
        <TextView
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:text="kg/l" 
        	android:textColor="#000000"
        	android:textSize="20dp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">
        <TextView
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:text="Prix:" 
        	android:textColor="#000000"
        	android:textSize="20dp"/>
        <TextView
            android:id="@+id/detail_textprixproduit"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:textColor="#000000"
        	android:layout_weight="1"
        	android:gravity="center_vertical|center_horizontal"
        	android:textSize="20dp"/>
        <TextView
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:text="â‚¬" 
        	android:textColor="#000000"
        	android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
        	android:id="@+id/detail_buttoncancel"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight=".5"
        	android:text="Suprimer" 
        	android:layout_marginLeft="25dp"
	    	android:layout_marginRight="25dp"
	    	android:textSize="20dp"/>
        <Button
        	android:id="@+id/detail_buttonsubmit"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight=".5"
        	android:text="Choisir" 
        	android:layout_marginLeft="25dp"
	    	android:layout_marginRight="25dp"
	    	android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>